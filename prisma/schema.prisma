datasource db {
  provider = "sqlite"
  url      = "file:/app/src/database/database.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  username  String     @unique
  password String
  email String     @unique
  avatar String
  status Boolean     @default(false)  
  // not null?
}

model Game {
	id	Int		@id @default(autoincrement())
	username String     @unique
	avatar String
	status Boolean     @default(false)
	positionX Int
	positionY Int
	elo_rating Int
}

